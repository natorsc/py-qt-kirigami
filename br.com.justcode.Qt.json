{
    "id": "br.com.justcode.Qt",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.7",
    "command": "app-name",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "app-name",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "./dist/py_qt_kirigami-0.1.0.tar.gz"
                }
            ]
        }
    ]
}